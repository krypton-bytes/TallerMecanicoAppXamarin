<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerMecanico.views.Mecanica.ModalQR">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <ContentView x:Name="qrCodeImageContainer" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <!-- El ZXingBarcodeImageView se agregará aquí dinámicamente en el código -->
            </ContentView>
            <Button Text="Cerrar" Clicked="OnCloseButtonClicked" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
